{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["DOM", "ES2022"],
		"rootDir": "src",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
		"outDir": "dist",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "homebridge"],
		"skipLibCheck": true
	},
	"include": ["src"]
}
