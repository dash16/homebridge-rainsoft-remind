{
	"pluginAlias": "RainsoftRemind",
	"pluginType": "platform",
	"customUi": true,
	"singular": true,
	"schema": {
		"type": "object",
		"properties": {
			"name": {
				"title": "Name",
				"type": "string",
				"default": "RainSoft"
			},
			"email": {
				"title": "RainSoft Account Email",
				"type": "string",
				"format": "email",
				"placeholder": "you@example.com",
				"description": "Preferred: the plugin will log in and discover your water softener hardware automatically."
			},
			"password": {
				"title": "RainSoft Account Password",
				"type": "string",
				"format": "password",
				"description": "Stored in your Homebridge config and used to refresh device info."
			},
			"pollSeconds": {
				"title": "Polling Interval",
				"type": "integer",
				"oneOf": [
					{
						"title": "5 minutes",
						"const": 300
					},
					{
						"title": "30 minutes (default)",
						"const": 1800
					},
					{
						"title": "1 hour",
						"const": 3600
					},
					{
						"title": "12 hours",
						"const": 43200
					},
					{
						"title": "24 hours",
						"const": 86400
					}
				],
				"default": 1800,
				"description": "How often to poll RainSoft cloud for status updates."
			}
		},
		"required": ["name"]
	},
	"layout": [
		{
			"type": "fieldset",
			"title": "Rainsoft Account",
			"items": [
				"name",
				"email",
				"password",
				"pollSeconds"
			]
		}
	]
}
